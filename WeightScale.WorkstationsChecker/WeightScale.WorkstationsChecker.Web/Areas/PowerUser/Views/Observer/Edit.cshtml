@model WeightScale.WorkstationsChecker.Web.Models.WorkstationViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="panel panel-primary">
        <div class="panel-heading">@ViewBag.Title</div>
        <div class="panel-body">
            @Html.ValidationSummary(true, string.Empty, new { @class = "text-danger" })
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                if (@Model != null && @Model.Id != 0)
                {
                    <div class="form-group">
                        @Html.LabelFor(m => m.Id, new { @class = "control-label" })
                        @Html.EditorFor(m => m.Id, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                        @Html.ValidationMessageFor(m => m.Id, string.Empty, new { @class = "text-danger" })
                    </div>
                }

                <div class="form-group">
                    @Html.LabelFor(m => m.Address, new { @class = "control-label" })
                    @Html.EditorFor(m => m.Address, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.Address, string.Empty, new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Name, new { @class = "control-label" })
                    @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.Name, string.Empty, new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ScreenPosition, new { @class = "control-label" })
                    @Html.EditorFor(m => m.ScreenPosition, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.ScreenPosition, string.Empty, new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.IsStopped, new { @class = "control-label" })
                    @Html.EditorFor(m => m.IsStopped)
                    @Html.ValidationMessageFor(m => m.IsStopped, string.Empty, new { @class = "text-danger" })
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
                @Html.ActionLink("Cancel", "Index", "Observer", new { area = "PowerUser" }, new { @class = "btn btn-default" })
            }
        </div>
    </div>
</div>
