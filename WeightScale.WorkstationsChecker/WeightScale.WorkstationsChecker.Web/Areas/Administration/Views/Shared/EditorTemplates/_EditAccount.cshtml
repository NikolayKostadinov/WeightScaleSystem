@model WeightScale.WorkstationsChecker.Web.Models.Identity.EditUserViewModel

    @Html.ValidationSummary(false)
    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.UserName)
    <div class="container">
        <div class="form-group">
            <div class="row">
                @Html.LabelFor(m => m.Email, new { @class = "col-sm-3 control-label" })
                <div class="col-sm-7">
                    @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control k-editor" } })
                </div>
                @Html.ValidationMessageFor(m => m.Email, string.Empty, new { @class = "validation-summary-errors" })
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                @Html.LabelFor(m => m.NewPassword, new { @class = "col-sm-3 control-label" })
                <div class="col-sm-7">
                    @Html.EditorFor(m => m.NewPassword, new { htmlAttributes = new { @class = "form-control k-editor" } })
                </div>
                @Html.ValidationMessageFor(m => m.NewPassword, string.Empty, new { @class = "validation-summary-errors" })
            </div>
        </div>
    </div>






